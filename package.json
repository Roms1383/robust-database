{
  "name": "robust-database",
  "version": "1.0.0",
  "description": "Concept to use database with Mongoose, seed and TypeScript",
  "main": "index.js",
  "author": "Romain KELIFA <romain.kelifa@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Roms1383/robust-database.git"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "dependencies": {
    "boom": "^7.3.0",
    "dotenv": "^7.0.0",
    "enjoi": "^5.0.1",
    "fastify": "2.3.0",
    "fastify-swagger": "^2.2.0",
    "joi": "^14.3.1",
    "joi-to-json-schema": "^4.0.0",
    "mongoose": "^5.5.3",
    "plur": "^3.0.1",
    "ramda": "^0.26.1",
    "winston": "^3.1.0",
    "yn": "^3.0.0"
  },
  "devDependencies": {
    "@types/boom": "^7.2.1",
    "@types/jest": "^24.0.0",
    "@types/mongoose": "^5.3.1",
    "@types/request-promise-native": "^1.0.16",
    "@types/yn": "types/npm-yn",
    "chalk": "^2.4.1",
    "codacy-coverage": "^3.4.0",
    "commander": "^2.19.0",
    "husky": "^1.3.1",
    "inquirer": "^6.2.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.0",
    "mongo-seeding": "^3.0.0",
    "mongodb": "^3.1.10",
    "request-promise-native": "^1.0.5",
    "snyk": "^1.153.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "lint": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "build": "rm -rf ./built/ && yarn tsc",
    "postman": "yarn build && node ./postman.js",
    "seed": "yarn build && node ./seeding.js",
    "use": "yarn seed && node ./using.js",
    "server": "node ./server.js",
    "serve": "yarn seed && node ./postman.js && yarn server",
    "vulnerabilities": "yarn snyk test",
    "test": "yarn seed -d && npx jest --detectOpenHandles --forceExit --coverage",
    "test-with-coverage": "yarn test && cat ./coverage/lcov.info | codacy-coverage"
  },
  "greenkeeper": {
    "commitMessages": {
      "initialBadge": ":memo: Docs: Add Greenkeeper badge",
      "initialDependencies": ":arrow_up: Upgrade: Update dependencies",
      "initialBranches": ":rocket: Build: Whitelist greenkeeper branches",
      "dependencyUpdate": ":arrow_up: Upgrade: Update ${dependency} to version ${version}",
      "devDependencyUpdate": ":arrow_up: Upgrade: Update ${dependency} to version ${version}",
      "dependencyPin": ":pushpin: Fix: Pin ${dependency} to ${oldVersion}",
      "devDependencyPin": ":pushpin: Fix: Pin ${dependency} to ${oldVersion}",
      "addConfigFile": ":wrench: Add Greenkeeper config file",
      "updateConfigFile": ":wrench: Update Greenkeeper config file",
      "lockfileUpdate": ":arrow_up: Update lockfile ${lockfilePath}"
    },
    "prTitles": {
      "initialPR": ":tada: Update dependencies to enable Greenkeeper :palm_tree:",
      "initialPrBadge": ":memo: Add badge to enable Greenkeeper :palm_tree:",
      "initialPrBadgeOnly": ":memo: Add Greenkeeper badge :palm_tree:",
      "initialSubgroupPR": ":arrow_up: Update dependencies for ${group} :palm_tree:",
      "basicPR": ":arrow_up: Update ${dependency} to the latest version :rocket:",
      "groupPR": ":arrow_up: Update ${dependency} in group ${group} to the latest version :rocket:"
    }
  }
}
